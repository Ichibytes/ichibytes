{
  "name": "database",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/database/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "prisma-generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prisma generate --schema=libs/database/prisma/schema.prisma"
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["prisma-generate"],
      "options": {
        "outputPath": "dist/libs/database",
        "main": "libs/database/src/index.ts",
        "tsConfig": "libs/database/tsconfig.lib.json",
        "assets": ["libs/database/*.md"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/database/jest.config.ts"
      }
    }
  }
}
